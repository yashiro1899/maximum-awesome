#!/bin/bash

HOSTSFILE="/etc/hosts"
if [ -d "$1" ]; then filespath="$1"; else filespath="$HOME/.hosts/"; fi
files=$(ls $filespath)

for h in $files; do
    cmp /etc/hosts $filespath$h &> /dev/null
    if [ $? -eq 0 ]; then
        echo "Current: [ $h ]"
        echo
        break
    fi
done

select h in $files; do
    sudo cp $filespath$h /etc/hosts
    echo -e "\n"
    echo "Changed \"/etc/hosts\" to [ $h ]"
    echo
    cat $HOSTSFILE
    break
done
